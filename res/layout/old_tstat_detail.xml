<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tstat6_label"
    tools:context=".TstatDetailActivity" >

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:text="@string/modbus_id"
        android:textSize="16sp" /> -->
    
    <TextView
        android:id="@+id/title_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:text="@string/temperature"
        android:textSize="24sp" />
    
    <TextView
        android:id="@+id/value_area"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"
        android:textSize="24sp"
        android:textColor="#ff7f00" />
        
    <ImageView
        android:id="@+id/left_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp"
        android:screenOrientation="landscape"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/left_key" />

    <ImageView
        android:id="@+id/down_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="440dp"
        android:screenOrientation="landscape"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/down_key" />
    
    <ImageView
        android:id="@+id/up_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="440dp"
        android:screenOrientation="landscape"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/up_key" />
    
    <ImageView
        android:id="@+id/right_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="440dp"
        android:screenOrientation="landscape"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/right_key" />
    
</RelativeLayout>
